FROM golang:1.8.1-alpine
LABEL maintaner="Stegen Smith <matthsmi@adobe.com>

COPY ./files/build.sh /root/build.sh

RUN apk update && apk add alpine-sdk autoconf automake bash curl git \
    libtool linux-headers musl-dev openssh-client openssl openssl-dev perl \
    pcre pcre-dev perl-dev wget

RUN /root/build.sh
